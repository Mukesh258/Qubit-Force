{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://<YOUR_BACKEND_DOMAIN>/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
